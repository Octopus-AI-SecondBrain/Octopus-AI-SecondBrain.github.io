# Local Development Environment Configuration
# This file contains sensible defaults for local development
# DO NOT commit actual secrets or production values to version control

ENVIRONMENT=development
DEBUG=true

# Local server
HOST=127.0.0.1
PORT=8000

# SQLite for local development (no setup required)
DATABASE_URL=sqlite:///./data/database/secondbrain.db
DATABASE_ECHO=false

# Development secret (use a real secret in production!)
SECRET_KEY=dev-local-secret-key-for-development-only-change-in-prod
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# HTTPS disabled for local development
ENABLE_HTTPS=false

# Allow local origins
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# Vector store local path
CHROMA_PATH=./data/vector_db

# OpenAI API (add your key if you want to test embeddings)
# Get a key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Logging for local development
LOG_LEVEL=DEBUG
LOG_FILE=
ENABLE_JSON_LOGGING=false

# Rate limiting enabled
RATE_LIMIT_ENABLED=true

# Demo credentials for testing (optional)
DEMO_USERNAME=testuser
DEMO_PASSWORD=TestPass123!
