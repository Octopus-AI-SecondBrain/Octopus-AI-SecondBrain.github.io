# SecondBrain Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Server configuration
HOST=127.0.0.1
PORT=8000

# Database
# For production, use PostgreSQL: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=sqlite:///./data/database/secondbrain.db
DATABASE_ECHO=false

# Security - MUST change in production!
# Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-ME-TO-A-SECURE-RANDOM-STRING-MIN-32-CHARS
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# HTTPS Configuration
# Set to true in production when using HTTPS
ENABLE_HTTPS=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080,http://127.0.0.1:8080

# Vector Store
CHROMA_PATH=./data/vector_db

# OpenAI API (optional - for embeddings)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Logging
LOG_LEVEL=INFO
LOG_FILE=
ENABLE_JSON_LOGGING=false

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Demo Configuration (for demo scripts only)
DEMO_USERNAME=
DEMO_PASSWORD=